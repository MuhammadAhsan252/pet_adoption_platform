<div class="container dashboard" style="margin-top: 10%;">
    <div class="row">
        <div class="col-2">
            <%= render 'shared/sidebar' %>
        </div>
        <div class="col-10">
            <!-- Table 1 - Bootstrap Brain Component -->
            <section class="py-3 py-md-5">
            <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-9 col-xl-8">
                <div class="card widget-card border-light shadow-sm">
                    <div class="card-body p-4">
                    <h5 class="card-title widget-card-title mb-4">Categories</h5>

                    <div id="categoryFormContainer">
                        <%= render 'category_form', category: Category.new %>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-borderless bsb-table-xl text-nowrap align-middle m-0">
                        <thead>
                            <tr>
                            <th>Name</th>
                            <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @categories.each do |category| %>
                                <tr>
                                    <td>
                                    <p class="category-name" style="display: block;"><%= category.name %></p>
                                        <div class="edit-category-form" style="display: none;">
                                            <%= render 'category_form', category: category %>
                                        </div>
                                    </td>
                                    <td>
                                        <%= link_to admins_category_path(category), class: "btn btn-sm btn-outline-success" do %>
                                        <i class="fas fa-eye"></i>
                                        <% end %>
                                        <button class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <%= link_to admins_category_path(category), data: { "turbo-method": :delete,"turbo-confirm": "Are you sure?" }, class: "btn btn-sm btn-outline-danger" do %>
                                        <i class="fas fa-trash"></i>
                                        <% end %>
                                    </td>
                                </tr>
                            <% end %>
                        </tbody>
                        </table>
                    </div>
                    </div>
                </div>
                </div>
            </div>
            </div>
            </section>
        </div>
    </div>
</div>
