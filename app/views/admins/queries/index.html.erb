<div class="container" style="margin-top: 10%;">
    <div class="row">
        <div class="col-2">
            <%= render 'shared/sidebar' %>
        </div>
        <div class="col-10">
            <div class="row">
                <div class="col-12">
                    <h2 class="text-center">Queries</h2>
                </div>
                <div class="col-10 offset-1">
                    <% @queries.each do |query| %>
                        <div class="query border mb-2">
                            <div class="p-4">
                                <p><%= query.email %></p>
                                <h5><%= query.full_name %></h5>
                                <p><%= query.message %></p>
                                <%= button_to "Delete", admins_query_path(query), method: :delete, data: { confirm: 'Are you sure you want to delete this query?' }, class: 'btn btn-danger'  %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>